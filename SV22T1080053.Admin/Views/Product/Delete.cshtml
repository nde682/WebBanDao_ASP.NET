@model Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}

<div class="box box-primary">

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Delete/@Model.ProductID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductDescription</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>


            <div class="form-group">
                @if (!(await SV22T1080053.BussinessLayers.ProductDataService.ProductDB.InUsed(Model.ProductID)))
                {
                    <div class="alert alert-danger">
                        <strong>Cảnh báo!</strong> Dữ liệu mặt hàng này không thể phục hồi sau khi xóa.
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">

                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>

                        <a class="btn btn-default" href="~/Product">
                            Quay lại
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>Cảnh báo!</strong> Dữ liệu mặt hàng này đang được sử dụng. Không thể xóa.
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">
                        <a class="btn btn-default" href="~/Product">
                            Quay lại
                        </a>
                    </div>
                }
                
            </div>
        </form>

    </div>

</div>