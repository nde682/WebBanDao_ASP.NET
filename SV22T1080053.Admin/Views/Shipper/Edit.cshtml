@{

}
@model Shipper
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/SaveData" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" autofocus asp-for="ShipperName" />
                <span asp-validation-for="ShipperName"></span>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
