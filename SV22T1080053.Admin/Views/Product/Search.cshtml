@model SV22T1080053.Admin.Models.PaginationSearchResult<Product>
@{
    Layout = null;
}

<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang.
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width:80px">Ảnh</th>
                <th>Tên mặt hàng</th>
                <th>Đơn vị tính</th>
                <th>Giá</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        <img src="~/images/products/@(string.IsNullOrEmpty(item.Photo) ? "nophoto.png" : item.Photo)" style="width:100%" alt="" />
                    </td>
                    <td>
                        @item.ProductName
                        <br />
                        <small><i>@item.ProductDescription</i></small>
                    </td>
                    <td>@item.Unit</td>
                    <td>@item.Price.ToString("N0")</td>
                    <td class="text-right">
                        <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @{
                // ... (code C# của em giữ nguyên) ...
                int currentPage = Model.Page;
                int pageCount = (int)Math.Ceiling((double)Model.RowCount / Model.PageSize);
                string searchValue = Model.SearchValue; // Thầy thấy em có khai báo mà chưa dùng?
                bool anyleft = false;
                bool anyright = false;
            }

            @for (int i = 1; i <= pageCount; i++)
            {
                if (i == currentPage)
                {
                    <li class="active"><a href="#">@i</a></li>
                }

                else if (i == 1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i == pageCount)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i - currentPage == 1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i - currentPage == -1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if ((i - currentPage > 1) && anyright == false)
                {
                    <li class="disabled"><a href="#">...</a></li>
                    anyright = true;
                }
                else if ((i - currentPage < -1) && anyleft == false)
                {
                    <li class="disabled"><a href="#">...</a></li>
                    anyleft = true;
                }
            }
        </ul>
    </div>
}