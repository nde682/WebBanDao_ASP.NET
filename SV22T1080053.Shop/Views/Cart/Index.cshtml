@model IEnumerable<SV22T1080053.Shop.Models.CartItem>
@using SV22T1080053.Shop.AppCodes

@{
    ViewData["Title"] = "Giỏ hàng";
    decimal grandTotal = Model != null ? Model.Sum(x => x.TotalPrice) : 0;
}

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Giỏ hàng của bạn</h1>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Thành tiền</th>
                            <th scope="col">Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var imgSrc = string.IsNullOrEmpty(item.Photo)
                            ? $"{ApplicationContext.ProductImagePath}NOimages.png"
                            : $"{ApplicationContext.ProductImagePath}{item.Photo}";

                            <tr id="product-row-@item.ProductID">
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img src="@imgSrc" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                    </div>
                                </th>
                                <td>
                                    <p class="mb-0 mt-4"><a href="~/Product/Detail/@item.ProductID" class="text-dark">@item.ProductName</a></p>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@item.Price.ToString("N0") ₫</p>
                                </td>
                                <td>
                                    <div class="input-group quantity mt-4" style="width: 120px;">
                                        <button class="btn btn-sm btn-minus rounded-circle bg-light border"
                                                onclick="ajaxUpdateQuantity(@item.ProductID, -1)">
                                            <i class="fa fa-minus"></i>
                                        </button>

                                        <input type="text" id="qty-@item.ProductID" class="form-control form-control-sm text-center border-0" value="@item.Quantity" readonly>

                                        <button class="btn btn-sm btn-plus rounded-circle bg-light border"
                                                onclick="ajaxUpdateQuantity(@item.ProductID, 1)">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4" id="item-total-@item.ProductID">@item.TotalPrice.ToString("N0") ₫</p>
                                </td>
                                <td>
                                    <button type="button"
                                            class="btn btn-md rounded-circle bg-light border mt-4"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteItemModal"
                                            data-id="@item.ProductID"
                                            data-name="@item.ProductName">
                                        <i class="fa fa-times text-danger"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row g-4 justify-content-end">
                <div class="col-8"></div>
                <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                    <div class="bg-light rounded">
                        <div class="p-4">
                            <h1 class="display-6 mb-4">Tổng cộng</h1>
                        </div>
                        <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                            <h5 class="mb-0 ps-4 me-4">Tổng thanh toán</h5>
                            <p class="mb-0 pe-4 text-primary fw-bold" id="cart-grand-total">@grandTotal.ToString("N0") ₫</p>
                        </div>

                        <div class="d-flex gap-2 p-4">
                            <button type="button"
                                    class="btn btn-outline-danger w-50 rounded-pill px-4 py-3 text-uppercase font-weight-bold"
                                    data-bs-toggle="modal"
                                    data-bs-target="#clearCartModal">
                                Xóa Giỏ
                            </button>

                            <a href="~/Order/Checkout" class="btn btn-primary w-50 rounded-pill px-4 py-3 text-uppercase text-white font-weight-bold">
                                Đặt hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h3 class="text-secondary">Giỏ hàng đang trống</h3>
                <a href="~/Shop" class="btn btn-primary rounded-pill px-5 py-3 mt-4 text-white">Tiếp tục mua sắm</a>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteItemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sản phẩm <strong id="modal-product-name"></strong> khỏi giỏ hàng?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <a href="#" id="btn-confirm-delete-item" class="btn btn-danger">Xóa ngay</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="clearCartModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Xảnh báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa toàn bộ sản phẩm trong giỏ hàng không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                <a href="~/Cart/ClearCart" class="btn btn-danger">Đồng ý Xóa</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            showCartInfo();

            // --- XỬ LÝ MODAL XÓA 1 SẢN PHẨM ---
            // Khi modal hiện lên, lấy ID từ nút bấm và gán vào nút Xóa trong Modal
            $('#deleteItemModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Nút bấm kích hoạt modal
                var id = button.data('id'); // Lấy giá trị data-id
                var name = button.data('name'); // Lấy tên sp

                // Cập nhật text tên sản phẩm trong modal
                var modal = $(this);
                modal.find('#modal-product-name').text(name);

                // Cập nhật link href cho nút "Xóa ngay"
                var deleteUrl = "/Cart/RemoveFromCart/" + id;
                modal.find('#btn-confirm-delete-item').attr('href', deleteUrl);
            });
        });

        // Hàm cũ của bạn (Giữ nguyên)
        function showCartInfo() {
            $.ajax({
                url: "/Cart/GetCartInfo",
                type: "GET",
                success: function (data) {
                    if (data.count > 0) {
                        $("#cart-global-count").text(data.count).show();
                    } else {
                        $("#cart-global-count").hide();
                    }
                    if(data.total) {
                         var formattedTotal = data.total.toLocaleString('vi-VN') + " ₫";
                        $("#cart-global-total").text(formattedTotal);
                    }
                },
                error: function () {
                    console.log("Không thể tải thông tin giỏ hàng");
                }
            });
        }

        function ajaxUpdateQuantity(id, change) {
            var currentQty = parseInt($("#qty-" + id).val());
            var newQty = currentQty + change;

            // Logic khi giảm về 0:
            // Vì dùng confirm() trong hàm này sẽ chặn code (đồng bộ) còn Modal là bất đồng bộ
            // Nên cách đơn giản nhất là chặn không cho giảm dưới 1 bằng nút trừ.
            // Nếu muốn xóa, người dùng phải bấm nút Xóa (thùng rác).
            if(newQty <= 0) {
                // Kích hoạt nút xóa tương ứng với ID này (Mở Modal xóa)
                $('button[data-id="' + id + '"][data-bs-target="#deleteItemModal"]').click();
                return; // Dừng lại, không update quantity nữa
            }

            // Gửi Ajax cập nhật
            $.ajax({
                url: "/Cart/UpdateQuantity",
                type: "POST",
                data: { id: id, quantity: newQty },
                success: function (response) {
                    if (response.success) {
                        // Cập nhật UI như cũ
                        $("#qty-" + id).val(newQty);
                        var itemTotalFormatted = response.newItemTotal.toLocaleString('vi-VN') + " ₫";
                        $("#item-total-" + id).text(itemTotalFormatted);
                        var grandTotalFormatted = response.newGrandTotal.toLocaleString('vi-VN') + " ₫";
                        $("#cart-grand-total").text(grandTotalFormatted);

                        // Cập nhật lại số lượng trên Header luôn cho đồng bộ
                        showCartInfo();
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Lỗi kết nối server!");
                }
            });
        }
    </script>
}