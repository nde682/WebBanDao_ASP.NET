@using SV22T1080053.Shop.AppCodes
@{
    ViewData["Title"] = "Đổi mật khẩu";
    // Lấy thông tin người dùng từ Cookie để hiển thị bên Sidebar
    var userData = User.GetUserData();
}

<div class="container-fluid page-header py-5">
    <div class="container text-center py-5">
        <h1 class="display-6 text-white mb-4 animated slideInDown">Đổi mật khẩu</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class=\"text-white\" href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a class=\"text-white\" href="~/Account/Profile">Tài khoản</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Đổi mật khẩu</li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row g-5 to">

            <div class="col-lg-4 col-md-12 wow fadeIn" data-wow-delay="0.1s">
                <div class="bg-white border rounded p-4 shadow-sm text-center">
                    <div class="position-relative d-inline-block mb-4">
                        @{
                            string photoName = userData?.Photo ?? "";
                            string imgSrc = string.IsNullOrEmpty(photoName)
                            ? $"{ApplicationContext.CustomerImagePath}NOimages.png" // Ảnh mặc định nếu chưa có
                            : $"{ApplicationContext.CustomerImagePath}{photoName}"; // Đường dẫn ảnh thật
                        }
                        <img src="@imgSrc" class="img-fluid rounded-circle border border-3 border-primary p-1"
                             style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar">
                    </div>

                    <h4 class="fw-bold text-dark">@userData?.DisplayName</h4>
                    <p class="text-muted mb-4">@userData?.Email</p>

                    <div class="d-grid gap-2 text-start">
                        <a href="~/Account/Profile" class="btn btn-outline-primary rounded-pill">
                            <i class="fas fa-user-circle me-2"></i> Thông tin tài khoản
                        </a>
                        <a href="~/Account/Statistics" class="btn btn-outline-primary rounded-pill ">
                            <i class="fas fa-chart-pie me-2"></i> Thống kê mua sắm
                        </a>
                        <a href="~/Account/ChangePassword" class="btn btn-primary rounded-pill text-white">
                            <i class="fas fa-key me-2"></i> Đổi mật khẩu
                        </a>
                        <a href="~/Account/Logout" class="btn btn-outline-danger rounded-pill mt-2">
                            <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-12 wow fadeIn" data-wow-delay="0.3s">
                <div class="bg-white border rounded p-5 shadow-sm">
                    <div class="mb-4 border-bottom pb-3">
                        <h3 class="text-primary">Bảo mật tài khoản</h3>
                        <p class="text-muted mb-0">Vui lòng tạo mật khẩu mạnh để bảo vệ tài khoản của bạn.</p>
                    </div>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form action="~/Account/ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="Mật khẩu hiện tại" required autofocus>
                                    <label for="oldPassword">Mật khẩu hiện tại</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Mật khẩu mới" required>
                                    <label for="newPassword">Mật khẩu mới</label>
                                    <div class="form-text mt-2"><i class="fas fa-info-circle me-1"></i> Mật khẩu nên có ít nhất 6 ký tự.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Nhập lại mật khẩu mới" required>
                                    <label for="confirmPassword">Nhập lại mật khẩu mới</label>
                                </div>
                            </div>

                            <div class="col-12 mt-4 d-flex">
                                <button type="submit" class="btn btn-primary rounded-pill py-3 px-5 me-3">
                                    <i class="fas fa-save me-2"></i> Cập nhật mật khẩu
                                </button>
                                <a href="~/Account/Profile" class="btn btn-secondary rounded-pill py-3 px-5">Hủy bỏ</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
            // 1. Tắt spinner
            if ($('#spinner').length > 0) {
                $('#spinner').removeClass('show');
            }
            setTimeout(function () {
            $('html, body').animate({
            scrollTop: $(".to").offset().top
            }, 100, 'easeInOutExpo');

        }, 500);
            // 2. ÉP FOCUS VÀO Ô TÌM KIẾM (Sau khi spinner tắt)
            $('#oldPassword').focus();

        }, 1000);
        })
    </script>
}