@model SV22T1080053.DomainModels.ProductAttribute
@{
    // Tiêu đề trang (đã được set trong Controller)
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Product/SaveAttribute">

            <input type="hidden" name="AttributeID" value="@Model.AttributeID" />
            <input type="hidden" name="ProductID" value="@Model.ProductID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeName" value="@Model.AttributeName" required autofocus />
                    <span asp-validation-for="AttributeName"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeValue" value="@Model.AttributeValue" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>

                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>