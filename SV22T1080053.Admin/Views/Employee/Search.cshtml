@model PaginationSearchResult<Employee>
@{
    Layout = null;
}
<!-- Hiển thị dữ liệu -->
<p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang.
</p>
<div class="row">
    @foreach (var item in Model.Data)
    {
        <div class="col-sm-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">@item.FullName</h3>
                    <div class="box-tools pull-right">
                        <a class="btn btn-box-tool" href="~/Employee/Edit/@item.EmployeeID">
                            <i class="fa fa-edit text-primary"></i>
                        </a>
                        <a class="btn btn-box-tool" href="~/Employee/Delete/@item.EmployeeID">
                            <i class="fa fa-trash text-danger"></i>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <img class="profile-user-img img-responsive img-bordered" src="~/images/employees/@item.Photo">
                        </div>
                        <div class="col-sm-8">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <i class="fa fa-birthday-cake"></i> @string.Format("{0:dd/MM/yyyy}", item.BirthDate)
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-phone"></i> @item.Phone
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-envelope"></i> @item.Email
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @{
                // ... (code C# của em giữ nguyên) ...
                int currentPage = Model.Page;
                int pageCount = (int)Math.Ceiling((double)Model.RowCount / Model.PageSize);
                string searchValue = Model.SearchValue; // Thầy thấy em có khai báo mà chưa dùng?
                bool anyleft = false;
                bool anyright = false;
            }

            @for (int i = 1; i <= pageCount; i++)
            {
                if (i == currentPage)
                {
                    <li class="active"><a href="#">@i</a></li>
                }

                else if (i == 1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i == pageCount)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i - currentPage == 1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if (i - currentPage == -1)
                {
                    <li><a href="javascript:;" class="page-link" onclick="searchData(@i)">@i</a></li>
                }
                else if ((i - currentPage > 1) && anyright == false)
                {
                    <li class="disabled"><a href="#">...</a></li>
                    anyright = true;
                }
                else if ((i - currentPage < -1) && anyleft == false)
                {
                    <li class="disabled"><a href="#">...</a></li>
                    anyleft = true;
                }
            }
        </ul>
    </div>
}
