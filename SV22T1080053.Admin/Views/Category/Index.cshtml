@{
    ViewBag.Title = "Quản lý Loại hàng";
}
@model PaginationSearchResult<Category>
<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="~/Category" method="get">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên khách hàng cần tìm"
                       autofocus
                       value="@Model.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên loại hàng</th>
                            <th>Mô tả</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td class="text-right">
                                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @{
                        bool anyleft = false;
                        bool anyright = false;
                        int currentPage = Model.Page;
                        int totalCount = Model.RowCount;
                        int pageSize = Model.PageSize;
                        string searchValue = Model.SearchValue;
                        int pageCount = (int)Math.Ceiling((double)totalCount / pageSize);
                    }
                    @for (int i = 1; i <= pageCount; i++)
                    {
                        if (i == currentPage)
                        {
                            // Trang hiện tại thì "active"
                            <li class="active"><a href="#">@i</a></li>
                        }
                        else if (i == 1)
                        {
                            <li><a href="~/Category?page=@i&searchValue=@searchValue">@i</a></li>
                        }
                        else if (i == pageCount)
                        {
                            <li><a href="~/Category?page=@i&searchValue=@searchValue">@i</a></li>
                        }
                        else if (i - currentPage == 1)
                        {
                            <li><a href="~/Category?page=@i&searchValue=@searchValue">@i</a></li>
                        }
                        else if (i - currentPage == -1)
                        {
                            <li><a href="~/Category?page=@i&searchValue=@searchValue">@i</a></li>
                        }
                        else if ((i - currentPage > 1) && anyright == false)
                        {
                            <li><a href="#">...</a></li>
                            anyright = true;
                        }
                        else if ((i - currentPage < -1) && anyleft == false)
                        {
                            <li><a href="#">...</a></li>
                            anyleft = true;
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>