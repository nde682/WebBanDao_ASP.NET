@{
    ViewBag.Title = "Xóa nhân viên";
}
@model Employee
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(Model.IsWorking ? "Đang làm việc" : "Không còn làm việc")</p>
                </div>
            </div>

            <div class="form-group ">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Url.Content("~/images/employees/" + Model.Photo)" class="img img-bordered" style="width:200px">
                </div>
            </div>

            <div class="form-group text-right">
                @if (!(await SV22T1080053.BussinessLayers.CommonDataService.EmployeeDB.InUsedAsync(Model.EmployeeID)))
                {
                    <div class="alert alert-danger">
                        <strong>Cảnh báo!</strong> Dữ liệu nhân viên này không thể phục hồi sau khi xóa.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>Cảnh báo!</strong> Dữ liệu nhân viên này đang được sử dụng. Không thể xóa.
                    </div>
                }
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xác nhận xóa
                    </button>
                    <a href="/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>
