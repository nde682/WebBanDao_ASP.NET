<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - SV22T1080053 Shop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/themes/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/themes/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/themes/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/themes/css/style.css" rel="stylesheet">
    <link href="~/themes/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    @{
        await Html.RenderPartialAsync("_Header");
    }
    @{
        await Html.RenderPartialAsync("_NavBar");
    }

    @RenderBody()

    @{
        await Html.RenderPartialAsync("_Footer");
    }

    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8/jquery.inputmask.min.js"></script>

    <script src="~/themes/lib/easing/easing.min.js"></script>
    <script src="~/themes/lib/waypoints/waypoints.min.js"></script>
    <script src="~/themes/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/themes/lib/wow/wow.min.js"></script>

    <script src="~/themes/js/main.js"></script>

    <script src="~/themes/lib/counterup/counterup.min.js"></script>
    <script src="~/themes/lib/lightbox/js/lightbox.min.js"></script>
        <script>
             $(document).ready(function () {
                $('.inputmask-numeric').inputmask({
                    alias: "numeric",
                    groupSeparator: ".",
                    radixPoint: ",",
                    autoGroup: true,
                    digits: 0,
                    rightAlign: false,
                    removeMaskOnSubmit: true
                });
                showCartInfo();
            });
             function showCartInfo() {
            $.ajax({
                url: "/Cart/GetCartInfo",
                type: "GET",
                success: function (data) {
                    if (data.count > 0) {
                        $("#cart-global-count").text(data.count).show();
                    } else {
                        $("#cart-global-count").hide();
                    }
                    var formattedTotal = data.total.toLocaleString('vi-VN') + " ₫";
                    $("#cart-global-total").text(formattedTotal);
                },
                error: function () {
                    console.log("Không thể tải thông tin giỏ hàng");
                }
            });
            }
        </script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>