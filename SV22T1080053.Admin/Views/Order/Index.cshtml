@model SV22T1080053.Admin.Models.OrderSearchInput
@{
    ViewBag.Title = "Quản lý đơn hàng";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.5/daterangepicker.min.css">
<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Order/Search" method="get">
            <input type="hidden" name="PageSize" value="@Model.PageSize" />

            <div class="row container-fluid">
                <div class="col-sm-2">
                    <select class="form-control" name="Status">
                        <option value="0" selected="@(Model.Status == 0)">-- Trạng thái --</option>
                        <option value="1" selected="@(Model.Status == 1)">Đơn hàng mới (chờ duyệt)</option>
                        <option value="2" selected="@(Model.Status == 2)">Đơn hàng đã duyệt (chờ chuyển hàng)</option>
                        <option value="3" selected="@(Model.Status == 3)">Đơn hàng đang được giao</option>
                        <option value="4" selected="@(Model.Status == 4)">Đơn hàng đã hoàn tất thành công</option>
                        <option value="-1" selected="@(Model.Status == -1)">Đơn hàng bị hủy</option>
                        <option value="-2" selected="@(Model.Status == -2)">Đơn hàng bị từ chối</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input type="text" name="DateRange" value="@Model.DateRange" class="form-control daterange-picker" placeholder="" />
                </div>
                <div class="col-sm-8 input-group">
                    <input type="text" name="SearchValue"
                           value="@Model.SearchValue"
                           class="form-control"
                           placeholder="Tìm kiếm theo tên khách hàng hoặc tên người giao hàng">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i> Tìm kiếm
                        </button>
                    </span>
                </div>
            </div>
        </form>
        <hr />
        <div id="searchResult">
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.5/daterangepicker.min.js"></script>
    <script>
        function doSearch(page) {
            var searchCondition = $("#formSearch").serializeArray();
            searchCondition.push({ name: "Page", value: page });

            var action = $("#formSearch").prop("action");
            var method = $("#formSearch").prop("method");

            $.ajax({
                url: action,
                type: method,
                data: searchCondition,
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });
        }

        $(document).ready(function () {
            // Khi trang vừa load, gọi hàm tìm kiếm ở trang hiện tại (mặc định là 1)
            doSearch(@Model.Page);
            $('.daterange-picker').daterangepicker({
                "locale": {
                    "format": "DD/MM/YYYY",
                    "applyLabel": "Áp dụng",
                    "cancelLabel": "Xóa", // Đổi nút Cancel thành nút Xóa
                },
                autoUpdateInput: false
            });

            // Xử lý khi người dùng bấm nút "Áp dụng"
            $('.daterange-picker').on('apply.daterangepicker', function(ev, picker) {
                $(this).val(picker.startDate.format('DD/MM/YYYY') + ' - ' + picker.endDate.format('DD/MM/YYYY'));
            });

            // Xử lý khi người dùng bấm nút "Xóa" (Cancel)
            $('.daterange-picker').on('cancel.daterangepicker', function(ev, picker) {
                $(this).val(''); // Xóa trắng ô input
            });
            // Khi submit form, chặn action mặc định và gọi hàm AJAX
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(1); // Luôn quay về trang 1 khi tìm kiếm mới
            });
        });
    </script>
}