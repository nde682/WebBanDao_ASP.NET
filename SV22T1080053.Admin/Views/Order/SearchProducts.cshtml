@model PaginationSearchResult<Product>
@{
    Layout = null;
 
}


    <!-- Hiển thị danh sách mặt hàng tìm được -->
    @foreach (var item in Model.Data)
    {
        <form action="~/Order/AddToCart" class="formAddToCart" method="post" style="background-color:#fff; border:1px solid #ccc; margin:5px 0px 5px 0px; padding:5px;">
            <input type="hidden" name="ProductID" value="@item.ProductID" />
            <input type="hidden" name="Unit" value="@item.Unit" />
            <input type="hidden" name="ProductName" value="@item.ProductName" />
            <input type="hidden" name="Photo" value="@item.Photo" />
            <div class="row">
                <div class="col-md-12">
                    <strong>@item.ProductName</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <img class="img img-responsive img-bordered" src="/images/products/@item.Photo">
                </div>
                <div class="col-sm-9">
                    <div class="form-group-sm">
                        <div class="row">
                            <div class="col-md-7">
                                <label>Giá bán:</label>
                                <input class="form-control inputmask-numeric" type="text" value="@string.Format("{0:N0}", @item.Price)" name="SalePrice" />
                            </div>
                            <div class="col-md-5">
                                <label>Số lượng:</label>
                                <input class="form-control" type="number" value="1" min="1" name="Quantity" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group-sm" style="margin-top:2px;">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fa fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        </form>
    }

    <ul class="pager">
    @if (Model.Page > 1)
    {
        <li class="previous"><a href="javascript:;" onclick="searchProducts(@Model.Page-1)"><i class="fa fa-backward"></i></a></li>
    }
    @if (Model.Page < Model.PageCount)
    {
        <li class="next"><a href="javascript:;" onclick="searchProducts(@Model.Page+1)"><i class="fa fa-forward"></i></a></li>
    }
    </ul>

<script>
    $(document).ready(function (){
        $(".formAddToCart").submit(function (e){
            e.preventDefault();

            var url = $(this).prop("action");
            var method = $(this).prop("method");
            var submitData = $(this).serializeArray();
            $.ajax({
                url: url,
                method: method,
                data: submitData,
                success: function (data) {
                    $("#cart").html(data);
                }
            });
        })
    })
</script>